<h1>Burgers</h1>

{{!-- Form to submit new burgers --}}
<div class="jumbotron">
  <div class="burgerGif"><img src="https://media.giphy.com/media/jsI3GCk2apWymQi9jf/giphy.gif" alt="Gif">
 <h2>Add a Burger:</h2>
    <div class="add-burger-section mt-4">
    <form action = "/api/burgers" method="POST" class="create-form">
      <div class="form-group">
    <label for="newburg">Burger Name:</label>
    <input type="text" id="burgerName" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="0" checked> Fresh!<br>
    <input type="radio" name="devoured" value="1"> Devoured.
  </div>

  <button type="submit">Add Burger</button>
</form>
  </div>    
  </div>
</div>


{{!-- Looping through each burger in the database and generating html, putting it in a fresh burger list or ded burger list depending on devoured state --}}
 <div class="burger-lists mt-5 d-flex flex-column flex-sm-row justify-content-between">
    <div class="undevoured-list list-box my-2 my-sm-0 mr-sm-2">
      <h2 class="list-title">Fresh Burgers:</h2>
      <ul class="list-content" id="not-d-list">
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers devoured=false}}
    {{/unless}}
  {{/each}}
</ul>
</div>

 <div class="burger-lists mt-5 d-flex flex-column flex-sm-row justify-content-between">
    <div class="undevoured-list list-box my-2 my-sm-0 mr-sm-2">
      <h2 class="list-title">Devoured:</h2>
      <ul class="list-content" id="not-d-list">
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers devoured=true}}
    {{/if}}
  {{/each}}
</ul>
</div>


